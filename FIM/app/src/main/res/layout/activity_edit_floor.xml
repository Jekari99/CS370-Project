<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="139dp"
    tools:layout_editor_absoluteY="270dp"
    android:background="#D2B48C">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2B48C">

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="104dp"
            android:layout_height="54dp"
            android:layout_marginTop="4dp"
            android:text="Log Out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/enter_btn"
            android:layout_width="103dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="84dp"
            android:text="Enter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_view_all" />

        <Button
            android:id="@+id/button_view_all"
            android:layout_width="104dp"
            android:layout_height="59dp"
            android:layout_marginTop="8dp"
            android:text="View All"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.951"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoutBtn"
            tools:text="View All" />

        <TextView
            android:id="@+id/editFloor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="88dp"
            android:layout_marginLeft="10dp"
            android:text="Edit Floor"
            android:textColor="@color/black"
            android:textSize="45dp"
            app:layout_constraintEnd_toStartOf="@+id/logoutBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/floor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="5"
            android:hint="Floor ID"
            android:inputType="number"
            android:minHeight="48dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/enter_btn"
            app:layout_constraintHorizontal_bias="0.61"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_view_all" />

        <TextView
         android:id="@+id/category"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:text="Category"
         android:textSize="35dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/floor_id" />

     <RadioGroup
         android:id="@+id/radioGroupCategory"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"

         android:layout_marginLeft="10dp"
         android:textColor="@color/black"
         tools:layout_editor_absoluteX="0dp"
         tools:layout_editor_absoluteY="137dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/category">

         <RadioButton
             android:id="@+id/laminate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@android:color/transparent"
             android:text="Laminate"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/stone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@android:color/transparent"
             android:text="Stone"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/wood"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@android:color/transparent"
             android:text="Wood"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/vinyl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@android:color/transparent"
             android:text="Vinyl"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/tile"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@android:color/transparent"
             android:text="Tile"
             android:textSize="25dp" />
     </RadioGroup>

     <TextView
         android:id="@+id/type"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Type"
         android:textSize="35dp"

         android:layout_marginLeft="10dp"
         android:textColor="@color/black"
         tools:layout_editor_absoluteX="0dp"
         tools:layout_editor_absoluteY="602dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/radioGroupCategory"/>

     <RadioGroup
         android:id="@+id/radioGroupType"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:textColor="@color/black"
         tools:layout_editor_absoluteX="1dp"
         tools:layout_editor_absoluteY="291dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/type">

         <RadioButton
             android:id="@+id/engineered"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Engineered"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/bamboo"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Bamboo"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/solid"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Solid"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/porcelain"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Porcelain"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/ceramic"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Ceramic"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/resin"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Resin"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/marble"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Marble"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/pebble"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Pebble"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/slate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Slate"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/regularLaminate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Regular laminate"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/waterResistant"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Water resistent"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/waterProof"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Waterproof"
             android:textSize="25dp" />
     </RadioGroup>

     <TextView
         android:id="@+id/species"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Species"
         android:textSize="35dp"
         android:layout_marginLeft="10dp"
         android:textColor="@color/black"
         tools:layout_editor_absoluteX="0dp"
         tools:layout_editor_absoluteY="602dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/radioGroupType"/>

     <RadioGroup
         android:id = "@+id/radioGroupSpecies"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:textColor="@color/black"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/species">

         <RadioButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id = "@+id/oak"
             android:textSize ="25dp"
             android:text = "Oak"/>

         <RadioButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id = "@+id/hickory"
             android:textSize ="25dp"
             android:text = "Hickory"/>

         <RadioButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id = "@+id/maple"
             android:textSize ="25dp"
             android:text = "Maple"/>
         <RadioButton
             android:id="@+id/notApplicable"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Not Applicable"
             android:textSize="25dp" />
     </RadioGroup>

     <TextView
         android:id="@+id/color"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Color"
         android:textSize="35dp"
         android:layout_marginLeft="10dp"
         android:textColor="@color/black"
         tools:layout_editor_absoluteX="0dp"
         tools:layout_editor_absoluteY="602dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/radioGroupSpecies"/>

     <RadioGroup
         android:id="@+id/radioGroupColor"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:textColor="@color/black"
         tools:layout_editor_absoluteX="233dp"
         tools:layout_editor_absoluteY="326dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/color">

         <RadioButton
             android:id="@+id/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Black"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/white"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="White"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/gray"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Gray"
             android:textSize="25dp" />

         <RadioButton
             android:id="@+id/brown"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Brown"
             android:textSize="25dp" />
     </RadioGroup>

     <TextView
         android:id="@+id/brand"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:textColor="@color/black"
         android:text="Brand"
         android:textSize="35dp"
         tools:layout_editor_absoluteX="0dp"
         tools:layout_editor_absoluteY="495dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/radioGroupColor"/>

     <RadioGroup
         android:id = "@+id/radioGroupBrand"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:textColor="@color/black"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/brand">

         <RadioButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id = "@+id/b1"
             android:textSize ="25dp"
             android:text = "Dream Home"/>

         <RadioButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id = "@+id/b2"
             android:textSize ="25dp"
             android:text = "Armstrong"/>

         <RadioButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id = "@+id/b3"
             android:textSize ="25dp"
             android:text = "Mohawk"/>
     </RadioGroup>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:text="Price"
            android:textSize="35dp"
            app:layout_constraintTop_toBottomOf="@+id/floor_size"
            />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:text="Quantity"
            android:textSize="35dp"
            app:layout_constraintTop_toBottomOf="@+id/floor_price" />

        <EditText
            android:id="@+id/floor_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:ems="5"
            android:hint="Floor Price"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price" />

        <EditText
            android:id="@+id/floor_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:ems="5"
            android:hint="Quantity"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/quantity" />

        <TextView
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:text="Size"
            android:textSize="35dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupBrand" />

        <EditText
            android:id="@+id/floor_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:ems="5"
            android:hint="Floor Size"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/size" />

        <TextView
            android:id="@+id/storeID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:text="Store ID"
            android:textSize="35dp"
            app:layout_constraintTop_toBottomOf="@+id/floor_quantity" />

        <EditText
            android:id="@+id/store_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:ems="5"
            android:hint="Store ID"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/storeID" />

        <Button
         android:id="@+id/editBtn"
         android:layout_width="103dp"
         android:layout_height="48dp"
         android:layout_marginTop="10dp"
         android:text="Update"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/store_ID" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

